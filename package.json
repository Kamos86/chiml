{
  "name": "chiml",
  "version": "0.1.0",
  "description": "Typescripting",
  "main": "dist/index.js",
  "bin": {
    "chie": "chie.js"
  },
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run lint && tsc --sourcemap && chmod 755 ./dist -R",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goFrendiAsgard/chiml.git"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/.*\\.test\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "verbose": true,
    "collectCoverage": true
  },
  "keywords": [
    "orchestration-language",
    "chimera-framework"
  ],
  "author": "goFrendi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/goFrendiAsgard/chimera-framework/issues"
  },
  "homepage": "https://github.com/goFrendiAsgard/chimera-framework#readme",
  "dependencies": {
    "@types/ramda": "^0.26.0",
    "ramda": "^0.25.0",
    "typescript": "^3.1.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.3",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.3",
    "tslint": "^5.11.0"
  }
}
